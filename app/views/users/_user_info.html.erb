 <main>
        <p id="notice"></p>
        <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
      <tr>
        <%= image_tag user.get_profile_image %>
      </tr>    
      <tr>
        <th>name</th>    
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>    
        <th><%= user.introduction %></th>
      </tr>
      </table>
    </div>
  </div>    
<div class='row'>      
  <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>    
</div>