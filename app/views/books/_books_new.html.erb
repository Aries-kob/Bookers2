<h2 class="mt-3">New Book</h2>
<%= form_with model: book do |f| %>

  <div class="form-group"><label>Title</label></div>
  <%= f.text_field :title %>
  
  <div class="form-group"><label>Opinion</label></div>
  <%= f.text_area :body %>
  
  <div class="actions"><%= f.submit 'Create Book', class:"btn btn-success" %></div>
  
<% end %>  